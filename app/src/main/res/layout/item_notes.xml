<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#37F4F0F0"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:backgroundTint="#9EFDB9D0"
        android:layout_margin="7dp"
        app:cardCornerRadius="10dp">

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:background="@drawable/green_shape"
            android:id="@+id/notesPriority"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/optimus_princeps"
                android:text="Title"
                android:id="@+id/notesTitle"
                android:textColor="@color/black"
                android:padding="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notes"
                android:textColor="@color/black"
                android:maxLength="10"
                android:id="@+id/notesView"
                android:padding="5dp"
                android:fontFamily="@font/optimus_princeps"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textColor="@color/black"
                android:id="@+id/notesDate"
                android:fontFamily="@font/optimus_princeps_semi_bold"
                android:textStyle="bold"
                android:padding="5dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>